@model IEnumerable<VacationPlanningAssistant.Models.AccommodationListItem>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        /* Remove the navbar's default margin-bottom and rounded borders */
        .navbar {
            margin-bottom: 0;
            border-radius: 0;
        }

        /* Set height of the grid so .sidenav can be 100% (adjust as needed) */
        .row.content {
            height: 450px
        }

        /* Set gray background color and 100% height */
        .sidenav {
            padding-top: 20px;
            background-color: #f1f1f1;
            height: 100%;
        }

        /* Set black background color, white text and some padding */
        footer {
            background-color: #555;
            color: white;
            padding: 15px;
        }

        /* On small screens, set height to 'auto' for sidenav and grid */

        .sidenav {
            height: auto;
            padding: 15px;
        }

        .row.content {
            height: auto;
        }
        }
    </style>
</head>

<body>
    <div class="container-fluid text-center">
        <div class="row content">
            <div class="col-sm-2 sidenav">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Transportation", "Index", "Transport")</li>
                        <li>@Html.ActionLink("Accommodation", "Index", "Accommodation")</li>
                        <li>@Html.ActionLink("Dining", "Index", "Dining")</li>
                        <li>@Html.ActionLink("Today", "Index", "Today/Today")</li>
                    }
                </ul>
            </div>
            <div class="col-sm-10 text-left">
                <h2>Accommodation Reservations</h2>

                <p>
                    <a class="btn btn-success" @Html.ActionLink("Create New Accommodation", "Create")
                </p>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.AccommodationId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.StreetAddress)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.City)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.State)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ZipCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ReservationNumber)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CheckIn)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CheckOut)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccommodationId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.StreetAddress)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.City)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.State)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ZipCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReservationNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CheckIn)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CheckOut)
                            </td>
                            <td>
                                <a class="btn btn-default btn-sm" @Html.ActionLink("Edit", "Edit", new { id = item.AccommodationId }) |
                                <a class="btn btn-default btn-sm"  @Html.ActionLink("Details", "Details", new { id = item.AccommodationId })|
                                <a class="btn btn-danger btn-sm" @Html.ActionLink("Delete", "Delete", new { id = item.AccommodationId })
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>


</body>
</html>
